{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true,
    "es2022": true
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 100,
        "arrowParens": "always"
      }
    ],
    "@typescript-eslint/no-unused-vars": ["warn"],
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}
